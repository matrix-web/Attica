{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "checkJs": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/api/*": [
        "src/api/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/libs/*": [
        "src/libs/*"
      ],
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/interfaces/*": [
        "src/interfaces/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
      "@/mocks/*": [
        "src/mocks/*"
      ]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
